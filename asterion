import pygame
import pygame.display
import os

img_path="sprites/a.png"

class Asterion(object):
    def __init__(self):
        self.image = pygame.image.load(img_path).convert_alpha()
        self.speed = 10
        self.x = 0
        self.y = 0
        self.yv = 0

    def jump(self, jump_force=10):
        if self.y == FLOOR:
            self.yv = -jump_force

    def gravity(self, g=1):
        self.yv += g
        self.y += self.yv

        if self.y > FLOOR:
            self.y = FLOOR
            self.yv = 0

        if self.x<0:
            self.x=0
        
    def keys(self):
        key = pygame.key.get_pressed()
        dist = self.speed
        if key[pygame.K_DOWN]:
            self.y += dist
        elif key[pygame.K_UP]:
            self.y -= dist 
        if key[pygame.K_RIGHT]: 
            self.x += dist
            if self.x>SCREEN_WIDTH-self.image.get_width():
                self.x=SCREEN_WIDTH-self.image.get_width()
        elif key[pygame.K_LEFT]:
            self.x -= dist
            if self.x<0:
                self.x=0 
        if key[pygame.K_SPACE]:
            self.jump()

        
    def draw(self, surface):
        surface.blit(self.image, (self.x, self.y))
